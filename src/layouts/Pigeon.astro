---
const { frontmatter } = Astro.props;
---

<html lang="pl-PL">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.jpg" />
    <meta name="viewport" content="width=device-width" />
    <title>{frontmatter.title} \ Podręczny Słownik Gołębi</title>
  </head>
  <body>
    <div class="article">
      <slot />
    </div>
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,400;1,700&family=Source+Serif+Pro&display=swap");

  body {
    margin: 0;
    padding: 0;
  }

  .article {
    padding: 40px;
    border-left: 3px solid #242424;
    margin-left: 20%;
    margin-right: 20%;
  }

  h1 {
    font-family: "Roboto Condensed", sans-serif;
    font-style: italic;
    font-weight: 700;
    text-align: center;
    font-size: 2rem;
    margin-bottom: 8px;
  }

  h3 {
    font-family: "Source Serif Pro", serif;
    font-size: 32px;
  }

  p {
    margin-top: 20px;
    font-family: "Source Serif Pro", serif;
    font-size: 28px;
    line-height: 1.3;
  }
</style>
