---
import "../styles/global.css";
import Tree from "../components/Tree.astro";
const pageTitle = "Bądź zdrów, strudzony wędrowcze!";
---

<html lang="pl-PL">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.jpg" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com/" />
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <title>{pageTitle} \ Podręczny Słownik Gołębi</title>
  </head>
  <body>
    <h1>WITAJ!</h1>
    <div class="wrapper">
      <div class="flexbox-container">
        <div class="image-box">
          <img
            src="../assets/wood_pigeon_lg.jpg"
            alt="large image of a (male) wood pigeon"
          />
        </div>
        <div class="text-box">
          <Tree />
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@1,700&display=swap');

  h1 {
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 700;
    font-style: italic;
    color: #144a61;
    text-decoration: #2484ad dashed underline;
    position: absolute;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 10vw;
    animation: fadein 3s;
  }

  @keyframes fadein {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  body {
    overflow: hidden;
    background-color: #bcd1e6;
  }

  .wrapper {
    height: 100vh;
    display: flex;
  }

  .flexbox-container {
    display: flex;
    flex: 1;
  }

  .image-box img {
    width: 100%;
  }

  .image-box,
  .text-box {
    flex: 1;
    display: flex;
    object-fit: cover;
    align-items: center;
    justify-content: center;
  }
</style>
